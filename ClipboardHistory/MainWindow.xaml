<Window x:Class="ClipboardHistory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardHistory"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Clipboard History" Icon="toad.ico" Height="600" Width="1024"  Loaded="Window_Loaded" StateChanged="Window_StateChanged">
    <Grid>
        <TextBox  IsReadOnly="True" AcceptsReturn="True" FontSize="20" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" TextWrapping="NoWrap" Name="TextBox1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <tb:TaskbarIcon IconSource="toad.ico" ToolTipText="Clipboard History" TrayMouseDoubleClick="TaskbarIcon_TrayMouseDoubleClick" />
    </Grid>
</Window>
